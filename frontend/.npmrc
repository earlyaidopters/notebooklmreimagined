# NPM configuration for frontend CI/CD

# Use exact versions for reproducibility
save-exact=true

# Install engines
engine-strict=true

# Lockfile version 3 (latest)
lockfile-version=3

# Ignore scripts during install (for CI)
ignore-scripts=false

# Fund settings (no fundraising messages)
fund=false

# Audit level (fail on high/moderate vulnerabilities)
audit-level=moderate

# Progress display (CI friendly)
progress=false

# Logs (CI friendly)
loglevel=warn
logstyle=json
